                // Merchant 2 breakdown
                document.getElementById('m2Products').textContent = 'M2: ' + stats.merchant2.totalProducts.toLocaleString();
                document.getElementById('m2Revenue').textContent = '$' + stats.merchant2.totalRevenue.toLocaleString(undefined, {maximumFractionDigits: 0});
                document.getElementById('m2AvgPrice').textContent = '$' + stats.merchant2.avgPrice.toFixed(2);
                document.getElementById('m2Types').textContent = stats.merchant2.productTypes;

            } catch (error) {
                console.error('Error loading stats:', error);
                showToast('Failed to load statistics', 'error');
            }
        }

        // WebSocket connection for real-time logs
        let ws = null;
        let thinkingSteps = [];

        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            const wsUrl = `${protocol}//${window.location.host}`;
            
            ws = new WebSocket(wsUrl);
            
            ws.onopen = () => {
                console.log('WebSocket connected');
            };
            
            ws.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);
                    handleRealtimeLog(data);
                } catch (err) {
                    console.error('WebSocket message error:', err);
                }
            };
            
            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
            };
            
            ws.onclose = () => {
                console.log('WebSocket disconnected');
                // Attempt to reconnect after 3 seconds
                setTimeout(connectWebSocket, 3000);
            };
        }

        function handleRealtimeLog(data) {
            const thinkingContent = document.getElementById('thinkingContent');
            if (!thinkingContent) return;
            
            const { type, message, timestamp } = data;
            
            // Filter out system initialization logs
            if (!document.getElementById('queryBtn').disabled) return;
            
            // Parse message for title and detail
            let title = '';
            let detail = '';
            
            // Handle different log formats
            if (message.includes('Processing query:')) {
                title = 'Analyzing Query';
                const match = message.match(/Processing query: "([^"]+)"/);
                if (match) {
                    detail = `User question: "${match[1]}"`;
                }
            } else if (message.includes('Analyzing query with intelligent search')) {
                title = 'Running Intelligent Search';
                detail = 'Finding semantic matches and patterns across databases';
            } else if (message.includes('Found') && message.includes('intelligent matches')) {
                const match = message.match(/Found (\d+) intelligent matches/);
                if (match) {
                    title = 'Intelligent Search Complete';
                    detail = `Found ${match[1]} relevant semantic matches`;
                }
            } else if (message.includes('AI Response:') || message.includes('AI Response Generated')) {
                title = 'AI Query Plan Generated';
                // Try to extract key info from JSON
                const jsonMatch = message.match(/\{[^}]*"target"[^}]*\}/);
                if (jsonMatch) {
                    try {
                        const parsed = JSON.parse(jsonMatch[0]);
                        detail = `Target: ${parsed.target}${parsed.use_unified_query ? ' (Unified Query)' : ''}`;
                    } catch (e) {
                        detail = 'SQL queries generated for database execution';
                    }
                } else {
                    detail = 'SQL queries generated for database execution';
                }
            } else if (message.includes('Executing UNIFIED query')) {
                title = 'Executing Unified Query';
                detail = 'Combining data from both merchants with normalized columns';
            } else if (message.includes('Executing Merchant_one')) {
                title = 'Querying Merchant One';
                detail = 'Executing SQL on product_catalog and vendor_management';
            } else if (message.includes('Executing Merchant_two')) {
                title = 'Querying Merchant Two';
                detail = 'Executing SQL on products and supply_chain';
            } else if (message.includes('Got') && message.includes('results from')) {
                const merchantMatch = message.match(/Got (\d+) results from (Merchant_\w+)/);
                if (merchantMatch) {
                    title = `${merchantMatch[2]} Results Retrieved`;
                    detail = `Successfully fetched ${merchantMatch[1]} rows`;
                }
            } else if (message.includes('Combined results:')) {
                const match = message.match(/Combined results: (\d+) total rows/);
                if (match) {
                    title = 'Results Combined';
                    detail = `Merged ${match[1]} total rows from both merchants`;
                }
            } else if (message.includes('Generated insight:')) {
                title = 'AI Insights Generated';
                const insightText = message.replace(/Generated insight:\s*/i, '').substring(0, 150);
                detail = insightText + (insightText.length === 150 ? '...' : '');
            } else if (message.includes('Query executed successfully')) {
                title = 'Query Execution Complete';
                detail = 'All operations completed successfully';
            } else if (message.includes('Rotating to API key')) {
                title = 'API Key Rotation';
                detail = message.replace(/üîÑ\s*/g, '');
            } else {
                // Generic fallback
                title = message.substring(0, 60).replace(/[üîçüß†ü§ñüìäüìÑüîó‚úÖ‚ùå‚ö†Ô∏èüí°üéâüîÑ]/g, '').trim();
                if (message.length > 60) {
                    detail = message.substring(60, 200).trim();
                }
            }
            
            // Skip if we already have this exact message
            if (thinkingSteps.includes(title + detail)) return;
            thinkingSteps.push(title + detail);
            
            // Don't add empty steps
            if (!title && !detail) return;
            
            addRealtimeStep(title, detail, type, timestamp);
        }

        function addRealtimeStep(title, detail, stepType, timestamp) {
            const thinkingContent = document.getElementById('thinkingContent');
            if (!thinkingContent) return;
            
            const iconMap = {
                query: 'üîç',
                ai: 'ü§ñ',
                system: '‚öôÔ∏è',
                result: '‚úì',
                error: '‚úó'
            };
            
            const icon = iconMap[stepType] || '‚Ä¢';
            const time = new Date(timestamp).toLocaleTimeString();
            
            const step = document.createElement('div');
            step.className = `thinking-step ${stepType}`;
            step.innerHTML = `
                <div class="thinking-step-icon">${icon}</div>
                <div class="thinking-step-content">
                    <div class="thinking-step-title">${escapeHtml(title)}</div>
                    ${detail ? `<div class="thinking-step-detail">${escapeHtml(detail)}</div>` : ''}
                    <div class="thinking-step-time">${time}</div>
                </div>
            `;
            
            thinkingContent.appendChild(step);
            
            // Auto-scroll to bottom
            const thinkingStage = document.getElementById('thinkingStage');
            if (thinkingStage) {
                const content = thinkingStage.querySelector('.thinking-content');
                if (content) {
                    content.scrollTop = content.scrollHeight;
                }
            }
        }

        async function executeQuery() {
            const queryInput = document.getElementById('queryInput');
            const question = queryInput.value.trim();

            if (!question) {
                showToast('Please enter a query', 'error');
                return;
            }

            const queryBtn = document.getElementById('queryBtn');
            queryBtn.disabled = true;
            queryBtn.innerHTML = '<div class="spinner"></div><span>Processing...</span>';

            const resultsSection = document.getElementById('resultsSection');
            const resultsContent = document.getElementById('resultsContent');
            
            resultsSection.classList.add('show');
            
            // Reset thinking steps
            thinkingSteps = [];
            
            // Show AI thinking stage with real-time logs
            resultsContent.innerHTML = `
                <div class="thinking-stage" id="thinkingStage">
                    <div class="thinking-header">
                        <div class="thinking-title">
                            <div class="thinking-icon"></div>
                            <span>Query Processing</span>
                        </div>
                        <div class="thinking-status">
                            <div class="status-indicator"></div>
                            <span>In Progress</span>
                        </div>
                    </div>
                    <div class="thinking-content" id="thinkingContent"></div>
                </div>
            `;

            try {
                const response = await fetch('/api/query', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ question })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Query failed');
                }

                // Wait a bit for WebSocket logs to finish
                await sleep(500);

                // Mark as complete
                const thinkingContent = document.getElementById('thinkingContent');
                if (thinkingContent) {
                    thinkingContent.innerHTML += `
                        <div class="thinking-complete">
                            <div class="thinking-complete-icon">
                                <i class="fas fa-check"></i>
                            </div>
