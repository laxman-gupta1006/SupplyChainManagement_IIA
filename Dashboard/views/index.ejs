                        </div>
                        <button class="collapse-button" onclick="toggleThinkingStage()">
                            <i class="fas fa-chevron-up"></i> Hide Process Details
                        </button>
                    `;
                }

                // Update status
                const statusEl = document.querySelector('.thinking-status span');
                const statusIndicator = document.querySelector('.status-indicator');
                if (statusEl) {
                    statusEl.textContent = 'Complete';
                    statusIndicator.style.background = 'var(--success-color)';
                    statusIndicator.style.animation = 'none';
