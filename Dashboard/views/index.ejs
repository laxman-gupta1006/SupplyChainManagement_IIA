                // Update header icon
                const thinkingIcon = document.querySelector('.thinking-icon');
                if (thinkingIcon) {
                    thinkingIcon.style.display = 'none';
                }

                await sleep(200);

                currentQuery = data;
                displayResults(data);
                showToast('Query executed successfully!', 'success');

            } catch (error) {
                console.error('Query error:', error);
                resultsContent.innerHTML = `
                    <div class="no-results">
                        <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: var(--error-color); margin-bottom: 16px;"></i>
                        <h3>Query Failed</h3>
                        <p>${escapeHtml(error.message)}</p>
                    </div>
                `;
                showToast('Query failed: ' + error.message, 'error');
            } finally {
                queryBtn.disabled = false;
                queryBtn.innerHTML = '<i class="fas fa-search"></i><span>Query</span>';
            }
        }

        // Helper function for thinking stage
        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        function toggleThinkingStage() {
            const thinkingStage = document.getElementById('thinkingStage');
            if (thinkingStage) {
                thinkingStage.classList.toggle('collapsed');
                const button = thinkingStage.querySelector('.collapse-button');
                if (button) {
                    const icon = button.querySelector('i');
                    if (thinkingStage.classList.contains('collapsed')) {
                        icon.className = 'fas fa-chevron-down';
                        button.innerHTML = '<i class="fas fa-chevron-down"></i> Show Process Details';
                    } else {
                        icon.className = 'fas fa-chevron-up';
                        button.innerHTML = '<i class="fas fa-chevron-up"></i> Hide Process Details';
                    }
                }
            }
